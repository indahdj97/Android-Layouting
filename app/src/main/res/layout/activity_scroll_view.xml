<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Scroll View"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Buku 1 : Fatimah Az-Zahra"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/buku"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Buku 2 : Cinta Yang Tak Biasa"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/buku2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Buku 3 : Habis Gelap Terbitlah Terang"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/buku3"/>

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:layout_gravity="center_horizontal"
            style="@style/Warna"
            android:text="Kembali" />
    </LinearLayout>

</ScrollView>